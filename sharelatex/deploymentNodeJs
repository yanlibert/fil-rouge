
apiVersion: v1
kind: Service
metadata:
  annotations:
    service.alpha.kubernetes.io/tolerate-unready-endpoints: "true"
  name: nodeJS
  labels:
    app: nodeJS
spec:
  type: NodePort
  ports:
  - port: 1337
    name: nodeJS
    targetPort: 1337
    nodePort: 32758
  selector:
    app: nodeJS
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nodeJSdeployment
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: nodeJS
    spec:
      containers:
      - name: nodeJScontainer
        image: nodeJS
        imagePullPolicy: Always
        ports:
- containerPort: 1337
